@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookList2.Pages.Booklist.EditModel
@{
}
<br />
<h2 class="text-enfo">Edit Book</h2>
<hr />
<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
            <div asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" />
                <span asp-validation-for="Book.Name"></span>
            </div>
             <div class="col-4 text-right">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
                <span asp-validation-for="Book.Author"></span>
            </div>
             <div class="col-4 text-right">
                <label asp-for="Book.CreateDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.CreateDate" />
                <span asp-validation-for="Book.CreateDate"></span>
            </div>
        </div>
        <div class="col-6">
            <input type="submit" value="save" class="btn btn-outline-success" />
            <a class="btn btn-link" asp-page="Index">Back to Booklist</a>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}