@page
@model View.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>RegisterVm</h4>
<hr />
<div class="row">
    <div class="col-md-4" >
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ReturnUrl" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="RegisterVm.FirstName" class="control-label"></label>
                <input asp-for="RegisterVm.FirstName" class="form-control" />
                <span asp-validation-for="RegisterVm.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterVm.LastName" class="control-label"></label>
                <input asp-for="RegisterVm.LastName" class="form-control" />
                <span asp-validation-for="RegisterVm.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterVm.Email" class="control-label"></label>
                <input asp-for="RegisterVm.Email" class="form-control" />
                <span asp-validation-for="RegisterVm.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterVm.UserName" class="control-label"></label>
                <input asp-for="RegisterVm.UserName" class="form-control" />
                <span asp-validation-for="RegisterVm.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterVm.Password" class="control-label"></label>
                <input asp-for="RegisterVm.Password" class="form-control" />
                <span asp-validation-for="RegisterVm.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterVm.PhoneNumber" class="control-label"></label>
                <input asp-for="RegisterVm.PhoneNumber" class="form-control" />
                <span asp-validation-for="RegisterVm.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Register">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

