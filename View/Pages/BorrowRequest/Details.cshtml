@page
@model View.Pages.BorrowRequest.DetailsModel
@{
}
<br />
<h2 class="text-enfo"> Request Details</h2>
<hr />
<table class="table table-striped border">
    <tr class="table-secondary">
        <th>
            <label asp-for="Request.Book.Name"></label>
        </th>
        <th>
            <label asp-for="Request.Book.Author"></label>
        </th>
    </tr>

</table>
<div class="border container" style="padding:30px">
    <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Request.StartDate"></label>
            </div>
            <div class="col-6">
                @Model.Request.StartDate
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Request.EndDate"></label>
            </div>
            <div class="col-6">
            @Model.Request.EndDate
             
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 text-right">
                <label asp-for="Request.RequestComments"></label>
            </div>
            <div class="col-6">
            @Model.Request.RequestComments
            </div>
            <a asp-page-handler="Delete" asp-route-id="@Model.Request.RequestId" class="btn btn-danger btn-sm">Delete</a>
        </div>
        <div class="col-6">
            <a class="btn btn-link" asp-page="Index">Back to Request list</a>
        </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}